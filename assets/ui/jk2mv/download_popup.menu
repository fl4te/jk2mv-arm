{
	menuDef
	{
		name				"download_popup"
		visible				0
		fullscreen			0
		rect				145 85 340 280
		focusColor			1 1 1 1
		style				1
		border				1
		descX				320
		descY				334
		descScale			0.7
		descColor			.235 .882 .847 1
		descAlignment		ITEM_ALIGN_CENTER
		popup

		onOpen
		{
			setFocus		yesText
		}

		onESC
		{
			uiScript		Leave
		}

		itemDef
		{
			name			frame_pic
			group			none
			style			WINDOW_STYLE_SHADER
			rect			0 0 340 280
			background		"gfx/menus/menu_box_dark"
