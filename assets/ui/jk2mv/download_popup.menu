		{
			name			screenTitle
			text			"JK2MV Download"
			style			WINDOW_STYLE_SHADER
			background		"gfx/menus/menu_blendbox"
			rect			10 5 340 20
			font			3
			textscale		0.7
			textalign		ITEM_ALIGN_CENTER
			textalignx		160
			textaligny		1
			forecolor		1 1 1 1
			visible			1
			decoration
		}

		// description
		itemDef
		{
			name			description1
			text			@MV_DL_SUGGEST
			style			0
			decoration
