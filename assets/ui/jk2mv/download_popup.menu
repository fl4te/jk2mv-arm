			rect			135 215 50 30
			background		"gfx/menus/menu_buttonback"
			forecolor		1 1 1 1
			decoration
			visible			0
		}
		
		itemDef
		{
			name			neverText
			text			@MV_DL_NEVER
			descText		@MV_DL_NEVER_INFO
			type			ITEM_TYPE_BUTTON
			style			WINDOW_STYLE_FILLED
			font			3
			textscale		.7
			rect			135 215 50 30
			textalignx		25
			textaligny		6
			textalign		ITEM_ALIGN_CENTER
			forecolor		0.65 0.65 1 1
			visible			1

			action
			{
				play		"sound/interface/button1.wav"
				uiScript	MVContinueDownload "deny_blacklist"
			}

			mouseEnter
			{
				show	neverButton
			}

			mouseExit
			{
				hide		neverButton
			}
		}

