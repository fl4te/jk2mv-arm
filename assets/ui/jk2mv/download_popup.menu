			background		"gfx/menus/menu_buttonback"
			forecolor		1 1 1 1
			decoration
			visible			0
		}
		
		itemDef
		{
			name			noText
			text			@MENUS0_NO
			descText		@MV_DL_SKIP
			type			ITEM_TYPE_BUTTON
			style			WINDOW_STYLE_FILLED
			font			3
			textscale		.7
			rect			80 215 50 30
